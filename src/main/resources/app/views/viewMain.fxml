<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TabPane?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0"
            styleClass="window-root"
            stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.views.viewMain">

    <BorderPane fx:id="root"
                prefWidth="800.0"
                styleClass="window"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">

        <top>
            <HBox fx:id="titleBar"
                  alignment="CENTER_LEFT"
                  prefHeight="63.0"
                  prefWidth="800.0"
                  spacing="8"
                  styleClass="title-bar">

                <Button fx:id="btnHome" styleClass="btn-title">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                            <image>
                                <Image url="@../img/home.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Pane HBox.hgrow="ALWAYS"/>

                <Button fx:id="btnMin" text="—"/>
                <Button fx:id="btnMax" text="▢"/>
                <Button fx:id="btnClose" text="✕"/>

            </HBox>
        </top>

        <left>
            <Pane minWidth="306.0"
                  prefHeight="737.0"
                  prefWidth="306.0"
                  styleClass="pane"
                  BorderPane.alignment="CENTER">

                <VBox alignment="CENTER"
                      nodeOrientation="LEFT_TO_RIGHT"
                      prefHeight="106.0"
                      prefWidth="306.0">

                    <HBox alignment="CENTER" spacing="8" VBox.vgrow="ALWAYS">
                        <ImageView fx:id="logo" fitHeight="46.0" fitWidth="53.0" preserveRatio="true">
                            <image>
                                <Image url="@../img/logo.png"/>
                            </image>
                        </ImageView>

                        <VBox>
                            <Text fill="WHITE" text="simple">
                                <font>
                                    <Font name="Arial Black" size="30.0"/>
                                </font>
                            </Text>
                            <Text fill="#f5f5f5" styleClass="txtLogo" text="PdfEdit"/>
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER">
                        <Button fx:id="btnOpen" mnemonicParsing="false" styleClass="btn-primary" text="Open">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>

                </VBox>
            </Pane>
        </left>

        <center>
            <BorderPane fx:id="centerHost" BorderPane.alignment="CENTER">
                <!-- HOME VIEW (default) -->
                <center>
                    <VBox fx:id="homeView"
                          prefHeight="200.0"
                          prefWidth="100.0"
                          styleClass="pane-light"
                          BorderPane.alignment="CENTER">

                        <Pane prefHeight="200.0" prefWidth="200.0" styleClass="pane">
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </VBox.margin>
                        </Pane>

                    </VBox>
                </center>

                <!-- TAB WORKSPACE (hidden until first PDF) -->
                <center>
                    <TabPane fx:id="tabPane" visible="false" managed="false" BorderPane.alignment="CENTER"/>
                </center>
            </BorderPane>
        </center>

    </BorderPane>
</AnchorPane>
